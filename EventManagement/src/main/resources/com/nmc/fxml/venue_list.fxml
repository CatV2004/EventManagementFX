<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox prefHeight="1000" prefWidth="1200" spacing="10"
      stylesheets="@../css/venue_list.css"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.nmc.controllers.VenueListController">

    <!-- Tiêu đề với nút quay lại -->
    <StackPane styleClass="title-label">
        <HBox alignment="CENTER_LEFT">
            <Button fx:id="btnBack" text="←" onAction="#handleBack" styleClass="icon-button"/>
        </HBox>
        <Label alignment="CENTER" text="Danh sách địa điểm" textAlignment="CENTER"/>
    </StackPane>

    <!-- Thanh tìm kiếm -->
    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="search-bar">
        <TextField fx:id="searchField" promptText="Nhập tên địa điểm..." />
        <Button fx:id="btnSearch" text="Tìm kiếm" />
    </HBox>

    <!-- Bảng hiển thị danh sách địa điểm -->
    <TableView fx:id="venueTable" styleClass="venue-table">
        <columns>
            <TableColumn fx:id="colId" prefWidth="50" text="ID" />
            <TableColumn fx:id="colName" prefWidth="250" text="Tên địa điểm" />
            <TableColumn fx:id="colLocation" prefWidth="250" text="Vị trí" />
            <TableColumn fx:id="colCapacity" prefWidth="150" text="Sức chứa" />
        </columns>
    </TableView>

    <!-- Thanh nút thao tác -->
    <HBox alignment="CENTER" spacing="10" styleClass="button-bar">
        <Button fx:id="btnAdd" text="Thêm địa điểm" onAction="#handleAddVenue"/>
        <Button fx:id="btnEdit" text="Sửa" />
        <Button fx:id="btnDelete" text="Xóa" />
    </HBox>

</VBox>
