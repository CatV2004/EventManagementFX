<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox prefWidth="600" prefHeight="400" spacing="15"
      stylesheets="@../css/venue_detail.css"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.nmc.controllers.OrganizerDetailController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Chi tiết khách hàng" styleClass="title-label" />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="120" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="30"/>
            <RowConstraints minHeight="30"/>
            <RowConstraints minHeight="30"/>
            <RowConstraints minHeight="30"/>
        </rowConstraints>

        <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="txtId" styleClass="readonly-textfield" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Tên tổ chức:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="txtName" promptText="Nhập tên tổ chức" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Người liên hệ:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="txtContactPerson" promptText="Nhập thông tin" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <TextField fx:id="txtEmail" promptText="Nhập email" GridPane.rowIndex="3" GridPane.columnIndex="1" />
       
        <Label text="Số điện thoại:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <TextField fx:id="txtPhone" promptText="Nhập số điện thoại" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    </GridPane>

    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="btnSave" text="Lưu" onAction="#handleSave" />
        <Button fx:id="btnCancel" text="Hủy" onAction="#handleCancel" />
    </HBox>

</VBox>