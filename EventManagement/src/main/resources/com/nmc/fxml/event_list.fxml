<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>


<VBox prefHeight="1000" prefWidth="1200" spacing="10" stylesheets="@../css/event_list.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nmc.controllers.EventListController">
    <StackPane styleClass="title-label">
        <Label alignment="CENTER"  text="Danh sách sự kiện" textAlignment="CENTER"/>
    </StackPane>


    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="search-bar">
        <TextField fx:id="searchField" promptText="Nhập tên sự kiện..." />
        <Button fx:id="btnSearch" text="Tìm kiếm" />
    </HBox>

    <TableView fx:id="eventTable" styleClass="event-table">
        <columns>
            <TableColumn fx:id="colId" prefWidth="50" text="ID" />
            <TableColumn fx:id="colName" prefWidth="200" text="Tên sự kiện" />
            <TableColumn fx:id="colVenue" prefWidth="150" text="Địa điểm" />
            <TableColumn fx:id="colStartTime" prefWidth="150" text="Thời gian bắt đầu" />
            <TableColumn fx:id="colEndTime" prefWidth="150" text="Thời gian kết thúc" />
            <TableColumn fx:id="colStatus" prefWidth="100" text="Trạng thái" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="10" styleClass="button-bar">
        <Button fx:id="btnAdd" text="Thêm sự kiện" onAction="#handleAddEvent"/>
        <Button fx:id="btnEdit" text="Sửa" />
        <Button fx:id="btnDelete" text="Xóa" />
    </HBox>
</VBox>
